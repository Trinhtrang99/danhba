<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/kq"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"


                android:textColor="#fff"
                android:textSize="70dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/so1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"

                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="70dp" />

                <Button
                    android:id="@+id/so2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="70dp" />

                <Button
                    android:id="@+id/so3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="70dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/so4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#fff"
                    android:textSize="70dp" />

                <Button
                    android:id="@+id/so5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#fff"
                    android:textSize="70dp" />

                <Button
                    android:id="@+id/so6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="70dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/so7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="70dp" />

                <Button
                    android:id="@+id/so8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="#fff"
                    android:textSize="70dp" />

                <Button
                    android:id="@+id/so9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="70dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/sao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#fff"
                    android:textSize="70dp" />

                <Button
                    android:id="@+id/so0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="70dp" />

                <Button
                    android:id="@+id/thang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/changebackgroud"
                    android:gravity="center"
                    android:text="#"
                    android:textColor="#fff"
                    android:textSize="70dp" />
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <ImageView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/btcall"
                android:src="@drawable/ic_baseline_phone_enabled_24"

                />

            <androidx.cardview.widget.CardView

                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bordcard"
                app:cardBackgroundColor="#000">

                <Button
                    android:id="@+id/them"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/add" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>
</layout>